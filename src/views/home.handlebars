<div class="container">
    <h1 class="main-title">Salsamentaria Las Margaritas</h1>

    <h2 class="section-title">Lista de productos</h2>
    <div class="card-grid">
        {{#each products}}
            <div class="product-card">
                <img src="{{this.thumbnail}}" alt="{{this.title}}" class="product-image" />
                <div class="card-body">
                    <h3 class="product-name">{{this.title}}</h3>
                    <p class="product-price">${{this.price}}</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>
