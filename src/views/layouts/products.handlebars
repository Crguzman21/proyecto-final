<h1>Productos</h1>
<ul>
    {{#each products}}
        <li>
        <h3>{{title}} - ${{price}}</h3>
        <p>{{description}}</p>
        <a href="/products/{{_id}}">Ver detalles</a>
        <form method="POST" action="/api/carts/ID_DEL_CARRITO/product/{{_id}}">
            <button type="submit">Agregar al carrito</button>
        </form>
    </li>
    {{/each}}
</ul>

<div>
    {{#if hasPrevPage}}
        <a href="/products?page={{prevPage}}">Anterior</a>
    {{/if}}
